<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchorpane" prefHeight="375.0" prefWidth="650.0" stylesheets="@../styles/Standard.css" xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.personalPageScreenController">
   <children>
      <ImageView fitHeight="375.0" fitWidth="650.0" opacity="0.15" pickOnBounds="true">
         <image>
            <Image url="@../styles/background.jpeg" />
         </image>
      </ImageView>
      <Button fx:id="btnapagar" focusTraversable="false" layoutX="453.0" layoutY="330.0" mnemonicParsing="false" opacity="0.75" prefWidth="168.0" text="Apagar">
         <font>
            <Font name="Roboto" size="14.0" />
         </font></Button>
      <TextArea fx:id="txtIdeia" focusTraversable="false" layoutX="227.0" layoutY="90.0" opacity="0.9" prefHeight="200.0" prefWidth="200.0" promptText="Ideia" wrapText="true">
         <font>
            <Font name="Roboto" size="14.0" />
         </font></TextArea>
      <TextField fx:id="txttitulo" focusTraversable="false" layoutX="227.0" layoutY="49.0" opacity="0.9" prefHeight="28.0" prefWidth="200.0" promptText="Titulo">
         <font>
            <Font name="Roboto" size="14.0" />
         </font></TextField>
      <Button fx:id="btnsalvar" focusTraversable="false" layoutX="242.0" layoutY="330.0" mnemonicParsing="false" opacity="0.75" prefWidth="168.0" text="Salvar">
         <font>
            <Font name="Roboto" size="14.0" />
         </font></Button>
      <Label focusTraversable="false" layoutX="490.0" layoutY="28.0" opacity="0.9" text="Comentários" textFill="WHITE">
         <font>
            <Font name="Roboto Bold" size="16.0" />
         </font></Label>
      <Label focusTraversable="false" layoutX="76.0" layoutY="28.0" opacity="0.9" text="Suas ideias" textFill="WHITE">
         <font>
            <Font name="Roboto Bold" size="16.0" />
         </font></Label>
      <ListView fx:id="listIdeias" focusTraversable="false" layoutX="17.0" layoutY="49.0" opacity="0.7" prefHeight="274.0" prefWidth="200.0" />
      <ListView fx:id="listComentarios" focusTraversable="false" layoutX="436.0" layoutY="49.0" opacity="0.7" prefHeight="274.0" prefWidth="200.0" />
      <RadioButton fx:id="rbtnpublica" focusTraversable="false" layoutX="227.0" layoutY="305.0" mnemonicParsing="false" opacity="0.9" text="Pública" textFill="WHITE">
         <font>
            <Font name="Roboto" size="14.0" />
         </font>
         <toggleGroup>
            <ToggleGroup fx:id="status" />
         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="rbtnprivada" focusTraversable="false" layoutX="335.0" layoutY="305.0" mnemonicParsing="false" opacity="0.9" text="Privada" textFill="WHITE" toggleGroup="$status">
         <font>
            <Font name="Roboto" size="14.0" />
         </font>
      </RadioButton>
      <Button fx:id="btnnova" focusTraversable="false" layoutX="34.0" layoutY="330.0" mnemonicParsing="false" opacity="0.75" prefWidth="168.0" text="Nova ideia">
         <font>
            <Font name="Roboto" size="14.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
