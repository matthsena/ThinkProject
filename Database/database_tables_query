CREATE TABLE TB_USUARIO 
(USUARIO VARCHAR (50) PRIMARY KEY,
SENHA VARCHAR (50),
EMAIL VARCHAR (150));

CREATE TABLE TB_IDEIAS 
(TITULO_IDEIA VARCHAR (254) PRIMARY KEY,
 STATUS_IDEIA VARCHAR (50),
 TEXTO_IDEIA VARCHAR (254),
 USUARIO_IDEIA VARCHAR (50)
FOREIGN KEY REFERENCES TB_USUARIO(USUARIO));

CREATE TABLE TB_COMENTARIOS
(ID_COMENTARIO INT IDENTITY(1,1) PRIMARY KEY,
 COMENTARIO VARCHAR (254),
 TITULO_IDEIA VARCHAR (254) FOREIGN KEY REFERENCES TB_IDEIAS(TITULO_IDEIA));



